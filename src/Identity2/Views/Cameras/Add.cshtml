@model ConnectedCamerasWeb.Models.Camera

@{
    ViewBag.Title = "AddCamera";
}
<div style="width:100%; height:100%; min-width:700px; min-height:700px; position:fixed; background: no-repeat center url('../../Content/Images/CameraWeb.png'); background-size: auto 100%">
    <div class="add-panel">
        <div class="login-panel-title">Add Camera</div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <section>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row">
                    @Html.LabelFor(model => model.CameraName, "Camera Name", new { @class = "cell30percent input-label" })
                    @Html.TextBoxFor(model => model.CameraName, new { @class = "cell50percent form-control" })
                </div>
                <div class="row10px"></div>
                <div class="row">
                    @Html.LabelFor(model => model.CameraGroup, "Camera Group", new { @class = "cell30percent input-label" })
                    @Html.TextBoxFor(model => model.CameraGroup, new { @class = "cell50percent form-control" })
                    @Html.ValidationMessageFor(model => model.CameraGroup, "", new { @class = "text-danger" })
                </div>
                <div class="row10px"></div>
                <div class="row">
                    @Html.LabelFor(model => model.CameraUrl, "Url", new { @class = "cell30percent input-label" })
                    @Html.TextBoxFor(model => model.CameraUrl, new { @class = "cell50percent form-control" })
                    @Html.ValidationMessageFor(model => model.CameraUrl, "", new { @class = "text-danger" })
                </div>
                <div class="row10px"></div>
                <div class="row">
                    @Html.LabelFor(model => model.Description, "Description", new { @class = "cell30percent input-label" })
                    @Html.TextBoxFor(model => model.Description, new { @class = "cell50percent form-control" })
                </div>
                <div class="row10px"></div>
                <div class="row">
                    <div class="cell25percent">&nbsp</div>
                    <div class="cell50percent center">
                        <input type="submit" value="Add" class="btn btn-default" />
                    </div>
                </div>
                <div class="row10px"></div>
                <div class="row" style="text-align: center;">
                    @Html.ActionLink("Back to List", "Pick", "Cameras")
                </div>
            </section>
        }
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
