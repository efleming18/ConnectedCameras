@model ConnectedCamerasWeb.ViewModels.Cameras.CameraPickerViewModel
@{
    ViewBag.Title = "Remove";
}

<div class="background-camera-remove">
    @using (Html.BeginForm("Remove", "Cameras", FormMethod.Post, new { @class = "pick-panel" }))
    { 
    <div class="login-panel-title">Remove Cameras</div>
    <div class="panel-listbox">
        @for (int i = 0; i < Model.AvailableCameras.Count; i++)
        {
            <div class="row100px" style="margin-top:10px; margin-bottom:10px;">
                <div class="cell10percent">
                    <input id="PostedCameras @i" name="PostedCameras.CameraIDs" value="@(i + 1)" type="checkbox" class="center-vertical" />
                </div>
                <div class="cell30percent" style="background-color:black;">

                </div>
                <div class="cellauto" style="text-align:left;">
                    <div class="row">@Model.AvailableCameras[i].CameraName</div>
                    <div class="row">@Model.AvailableCameras[i].Description</div>
                    <div class="row">
                        <div class="cell50px">URL:</div>
                        <div class="cellauto">@Model.AvailableCameras[i].CameraUrl</div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row10px"></div>
    <div class="row center">
        <input type="submit" value="Remove" class="btn btn-default" />
    </div>
    }
</div>

