@using MvcCheckBoxList.Model
@model ConnectedCamerasWeb.ViewModels.Cameras.CameraPickerViewModel

@{
    ViewBag.Title = "CameraPicker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/js/jquery.js"></script>
<div class="background-camera-pick">
    <div class="pick-panel">
        <div class="login-panel-title">Pick Cameras</div>
        @using (Html.BeginForm())
        {
            <div class="camera-picker-listbox" style="background-color:white;">
                @for (int i = 1; i < Model.AvailableCameras.Count; i++)
                {
                <div class="row">
                    <input id="PostedCameras @i" name="PostedCameras.CameraIDs" value="@i" type="checkbox" />
                </div>
                }
            </div>
            <div class="row10px"></div>
            <div class="row center">
                <input type="submit" value="Continue" class="btn btn-default" />
            </div>
        }
    </div>
