@using MvcCheckBoxList.Model
@model ConnectedCamerasWeb.ViewModels.Cameras.CameraPickerViewModel

@{
    ViewBag.Title = "CameraPicker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center">
    <h2>Camera Picker</h2>

    @using (Html.BeginForm())
    {
        <div class="center">
            @Html.CheckBoxListFor(model => model.PostedCameras.CameraIDs,
                              model => model.AvailableCameras,
                              camera => camera.Id,
                              camera => camera.CameraName,
                              model => model.SelectedCameras,
                              Position.Vertical)
        </div>
        <input type="submit" value="Continue" class="btn btn-default" />
    }
</div>



