<div class="feed-block center">
    @foreach (var camera in Model.Cameras) 
    {
        <div class="@Model.DecideFeedSize()">
            <div id="@camera.CameraName" class="feed-content">
                <img class="fill" src="~/Content/Images/cat.gif" />
            </div>
        </div>
    }
</div>
@* Only show the camera list if the user is not authenticated to control cameras. *@
<div class="control-panel dock-bottom dark">
    <h3>Current Focus:</h3>
    <div id="currentCamera">Nothing...</div>
</div>
<div class="camera-list dock-bottom dark center">
    <h3>Feeds:</h3>
    @foreach (var camera in Model.Cameras)
    {
        <div>@camera.CameraName</div>
    }
</div> 
<div class="camera-control dock-bottom center dark">
    <h3>Controls</h3>
    <div class="camera-input center">
        <div class="arrow-up center"></div>
    </div>
    <div class="camera-input center pan-left">
        <div class="arrow-left center"></div>
    </div>
    <div class="camera-input center pan-right">
        <div class="arrow-right center"></div>
    </div>
    <div class="camera-input center">
        <div class="arrow-down center"></div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/CameraFocus.js"></script>
<script type="text/javascript">
    var arrowUp = $('.arrow-up');
    var arrowLeft = $('.arrow-left');
    var arrowRight = $('.arrow-right');
    var arrowDown = $('.arrow-down');

    arrowUp.on('click', function () {
        alert('You clicked the arrow up button');
    });
    arrowLeft.on('click', function () {
        alert('You clicked the arrow left button');
    });
    arrowRight.on('click', function () {
        alert('You clicked the arrow right button');
    });
    arrowDown.on('click', function () {
        alert('You clicked the arrow down function');
    });


</script>



