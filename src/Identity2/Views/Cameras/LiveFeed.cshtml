<script type="text/javascript">
    if (typeof currentAngle === 'undefined') {
        var currentAngle = 90;
    }
    else {
        currentAngle += 1;
    }

    var leftArrow = $('.arrow-left');
    var rightArrow = $('.arrow-right');
    var downArrow = $('.arrow-down');
    var upArrow = $('.camera-input');

    leftArrow.on('click', function () {
        alert('left arrow clicked');
        moveServo("left");
    });

    rightArrow.on('click', function () {
        alert('right arrow clicked');
        moveServo("right");
    });

    upArrow.on('click', function () {
        alert('up arrow clicked');
        moveServo("up");
    });

    downArrow.on('click', function () {
        alert('down arrow clicked');
        moveServoLeft("down");
    });

    
    function moveServo(direction) {
        var beagleBone = require('bonescript');
        var servo = '';
        var panServo = 'P9_14';
        var tiltServo = 'P9_16';
        var dutyMin = 0.03;

        if (direction === "left") {
            servo = panServo;
            currentAngle -= 10;
            //set position to go left
        }
        else if (direction === "right") {
            servo = panServo;
            currentAngle += 10;
            //set position to go right
        }
        else if (direction === "up") {
            servo = tiltServo;
            currentAngle += 10;
            //set position to go up
        }
        else if (direction === "down") {
            servo = tiltServo;
            currentAngle -= 10;
            //set position to go down
        }

        var position = currentAngle / 180;
        var increment = 0.1;

        beagleBone.pinMode(servo, beagleBone.OUTPUT);
        updateDuty();

        function updateDuty() {
            // compute and adjust duty_cycle based on
            // desired position in range 0..1
            var dutyCycle = (position * 0.110) + dutyMin;
            beagleBone.analogWrite(servo, dutyCycle, 60, console.log(currentAngle));
            console.log("Duty Cycle: " +
                parseFloat(dutyCycle * 100).toFixed(1) + " %");
        }
    };

    function moveServoLeft() {
        debugger;
        var b = require('bonescript');
        var SERVO = 'P9_14';
        var duty_min = 0.03;
        var position = 0;
        var increment = 0.1;

        b.pinMode(SERVO, b.OUTPUT);
        updateDuty();

        function updateDuty() {
            // compute and adjust duty_cycle based on
            // desired position in range 0..1
            var duty_cycle = (position * 0.115) + duty_min;
            b.analogWrite(SERVO, duty_cycle, 60, scheduleNextUpdate);
            console.log("Duty Cycle: " +
                parseFloat(duty_cycle * 100).toFixed(1) + " %");
        }

        function scheduleNextUpdate() {
            // adjust position by increment and 
            // reverse if it exceeds range of 0..1
            position = position + increment;
            if (position < 0) {
                position = 0;
                increment = -increment;
            } else if (position > 1) {
                position = 1;
                increment = -increment;
            }

            // call updateDuty after 200ms
            setTimeout(updateDuty, 200);
        }
    };
</script>



