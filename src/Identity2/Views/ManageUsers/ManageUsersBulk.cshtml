<script type="text/javascript">
    $('.choose-users').click(function(e) {
        e.preventDefault();
        var arr = new Array();
        $('#user-checkbox:checked').each(function () {
            arr.push($(this).val());
        });
        $.post('/manageusers/AddSelectedUsersToGroup', { ids: arr }
